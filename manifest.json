{
    "manifest_version": 3,
    "name": "Paul Graham Reader Mode",
    "version": "1.0",
    "description": "Centers Paul Graham's website for better readability.",
    "content_scripts": [
      {
        "matches": ["*://paulgraham.com/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "author": "Kaushik Thirthappa",
    "icons": {
        "16": "pg-icon-16.png",
        "48": "pg-icon-48.png",
        "128": "pg-icon-128.png"
    }
  }
  